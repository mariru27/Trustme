@{
    @model Trustme.Models.Key
    ViewData["Title"] = "Edit";
}


<h1>Edit certificate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="KeyId" />
            <div class="form-group">
                <label asp-for="certificateName" class="control-label"></label>
                <input asp-for="certificateName" class="form-control" />
                <span asp-validation-for="certificateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <textarea class="form-control" asp-for="description" rows="3"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
