@model RoleUserModel


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.User.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.SecondName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.Mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role.RoleName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        <tr id="row_@Model.User.UserId">
            <td>
                @Html.DisplayFor(model => model.User.Username)
            </td>
            <td>
                @Html.DisplayFor(model => model.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(model => model.User.SecondName)
            </td>
            <td>
                @Html.DisplayFor(model => model.User.Mail)
            </td>
            <td>
                @Html.DisplayFor(model => model.Role.RoleName)
            </td>
            <td>
                <a asp-action="EditUser" asp-route-id="@Model.User.UserId">Edit</a> |
                <a onclick="ConfirmDelete(@Model.User.UserId)" data-toggle="modal" data-target="#DeleteUserModal" >Delete</a>
                @*<partial name="_DeleteUserModal" model="Model.User" />*@
                

            </td>
        </tr>

    </tbody>
</table>





<form method="post" asp-action="DeleteConfirmed">
    <input type="hidden" name="UserId" value=@Model.User.UserId id="UserId" />
    <div id="DeleteUserModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure you want to delete this user?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    User :  @Model.User.Username
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" onclick="DeleteEmployee()">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>



@section scripts{
    <script>



        var ConfirmDelete = function (UserId) {

            $("#UserId").val(UserId);
            $("#myModal").modal('show');

        }

        var DeleteUser = function () {



            var UserId = $("#UserId").val();

            $.ajax({

                type: "POST",
                url: "/Administrator/ConfirmDelete",
                data: { Id: UserId },
                success: function (result) {

                    $("#DeleteUserModal").modal("hide");
                    $("#row_" + UserId).remove();

                }

            })

        }



    </script>

}