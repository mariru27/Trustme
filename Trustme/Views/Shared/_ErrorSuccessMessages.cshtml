@*Verify signature page*@
@if (TempData["Error_MissingSignature"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["Error_MissingSignature"]</p>
}
@if (TempData["Error_MissingDocument"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["Error_MissingDocument"]</p>
}
@if (TempData["Error_InvalidSignature"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["Error_InvalidSignature"]</p>
}
@if (TempData["Error_CorruptedSignature"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["Error_CorruptedSignature"]</p>
}
@if (TempData["ValidSignature"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["ValidSignature"]</p>
}
@*Verify user page*@
@if (TempData["Error_UsernameMissing"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["Error_UsernameMissing"]</p>
}
@if (TempData["Error_UserDoNotExist"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["Error_UserDoNotExist"]</p>
}

@*Login page*@
@if (TempData["UsernameRequired"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["UsernameRequired"]</p>
}
@if (TempData["PasswordRequired"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["PasswordRequired"]</p>
}
@if (TempData["IncorrectUserOrPassword"] != null)
{
    <p class="alert alert-danger" id="documentError">@TempData["IncorrectUserOrPassword"]</p>
}

