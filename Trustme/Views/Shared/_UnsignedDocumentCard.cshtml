@model UnsignedDocument


<script>
    function ConfirmDelete(IdUnsignedDocument, Name) {
        $("#IdUnsignedDocument").val(IdUnsignedDocument);
        document.getElementById("Name").innerHTML = Name;
        $("#DeleteModal").modal("show");
    }
    function DeleteDocument() {
        var KeyId = $("#IdUnsignedDocument").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("DeleteDocument")",
            data: { id: KeyId },
            dataType: "text",
            success: function (result) {
                $("#DeleteModal").modal("hide");
                location.reload();
            }
        })
    
    }

</script>

<form asp-action="Sign" method="get">
    <input type="hidden" name="IdUnsignedDocument" value=@Model.IdUnsignedDocument id="IdUnsignedDocument" />
    <div class="card border-secondary mb-3">
        <div class="card-header text-secondary">
            <a class="float-left" asp-controller="SignDocuments" asp-action="Download" asp-route-id="@Model.IdUnsignedDocument">
                Download
            </a>
            @*<a class="float-right" onclick="ConfirmDelete(@Model.IdUnsignedDocument, @Model.Name)" asp-controller="SignDocuments" asp-action="">
                Delete
            </a>*@
            <button type="button" class="btn btn-primary float-right" onclick="ConfirmDelete(@Model.IdUnsignedDocument, '@Model.Name')">Delete</button>

        </div>
        <div class="card-body">
            <div class="form-group">
                Sent from username:
                @Model.SentFromUsername
            </div>
            <div class="form-group">
                File Name:
                @Model.Name
            </div>
            <div class="form-group">
                Document Upload time:
                @Model.SentTime
            </div>

            <p class="card-text">Key you need to sign with: <strong>@Model.KeyPreference</strong> </p>
            <div class="form-group">
                <input type="submit" value="Sign" class="btn btn-primary" />
            </div>
        </div>
    </div>
    <br>

</form>


<div id="DeleteModal" class="modal" tabindex="-1" role="dialog">
    <input type="hidden" id="IdUnsignedDocument" />
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <p style="color:#e80c0f"><strong>Danger:</strong>Signature and file can not be recovered after you confirm delete action!</p>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete unsigned document : <strong><span id="Name"></span></strong> ?</p>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <button type="submit" class="btn btn-primary" onclick="DeleteDocument()">Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>

</div>