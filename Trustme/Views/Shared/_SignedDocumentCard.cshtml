@model SignedDocumentsViewModel


@if (Model.Seen == false)
{
    @:<div class="card border-success mb-3" style="border-width:3px">
    }
    else
    {
        @:<div class="card border-secondary mb-3">
    }
    <div class="card-header text-secondary">
    <a class="float-left" asp-controller="SignedDocuments" asp-action="Download" asp-route-id="@Model.IdSignedDocument">
        Download
    </a>
    <button type="button" class="btn btn-outline-danger float-right" onclick="ConfirmDelete(@Model.IdSignedDocument, '@Model.Name')">Delete</button>
</div>
<div class="card-body">
    <div class="form-group">
        Signed by username:
        @Model.SignedByUsername
    </div>
    <div class="form-group">
        Sent from username:
        @Model.SentFromUsername
    </div>
    <div class="form-group">
        File Name:
        @Model.Name
    </div>
    @if (Model.Seen == false)
    {

        <div class="form-group float-lg-right">
            <img src="~/images/New.png" alt="new" width="100" height="70">
        </div>

    }
    <div class="form-group">
        Signed with key:
        <strong>@Model.KeyName</strong>
    </div>
    <a asp-controller="SignedDocuments" asp-action="SignedDocumentDetails" asp-route-id="@Model.IdSignedDocument">Details</a>
</div>
</div>
<br>
