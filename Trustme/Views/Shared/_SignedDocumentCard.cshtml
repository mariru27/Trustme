@model SignedDocumentsViewModel

<div class="card border-secondary mb-3">
    <div class="card-header text-secondary">
        <a class="float-left" asp-controller="SignedDocuments" asp-action="" asp-route-id="@Model.IdSignedDocument">
            Download
        </a>
        <a class="float-right" asp-controller="SignedDocuments" asp-action="DeleteDocument" asp-route-id="@Model.IdSignedDocument">
            Delete
        </a>
    </div>
    <div class="card-body">
        <div class="form-group">
            Signed by username:
            @Model.SignedByUsername
        </div>
        <div class="form-group">
            Sent from username:
            @Model.SentFromUsername
        </div>

        <div class="form-group">
            File Name:
            @Model.Name
        </div>
        <div class="form-group">
            Upload time:
            @Model.SentTime
        </div>
        <div class="form-group">
            Signed time:
            @Model.SignedTime
        </div>

        <div class="form-group">
            Signature:
            <textarea class="form-control" name="Signature">@Model.Signature</textarea>
        </div>
    </div>
</div>
<br>