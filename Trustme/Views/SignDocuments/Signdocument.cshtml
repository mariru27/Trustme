@*@model Trustme.Models.Key*@
@model IEnumerable<Trustme.Models.Key>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Sign Documents";
    var signature = (string)TempData["signature"];

}

<h4 class="display-4">Generate certificate and sign documents</h4>


<hr />

<form asp-action="GenerateCertificate">
    <div class="form-group">
        <label for="certificateName">Certificate name</label>
        <input for="certificateName" name="certificateName" type="text">
    </div>
    <div class="form-group">
        <label for="description" class="control-label">Description</label>
        <textarea class="form-control" name="description" rows="3"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Generate Cerificate" class="btn btn-success" />
    </div>
</form>
<br />

@*display documents*@

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KeyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.certificateName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KeyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.certificateName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.description)
                </td>
            </tr>
        }
    </tbody>
</table>




<hr />

<br />
<form asp-action="SignDoc" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="pkfile"><strong>Private key</strong></label>
        <input for="pkfile" name="pkfile" type="file">
    </div>
    <br />
    <div class="form-group">
        <label for="docfile"><strong>Document</strong></label>
        <input for="docfile" name="docfile" type="file">
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="submit" value="Upload" class="btn btn-primary" />
</form>
<br />


@{
    if (signature != "" && signature != null)
    {
        <div class="alert alert-success">
            <strong>Success!</strong> You signed your document.
        </div>
        <p class="font-weight-normal">Your signature:</p>
        <textarea class="form-control" name="signature">@signature</textarea>

    }
}
