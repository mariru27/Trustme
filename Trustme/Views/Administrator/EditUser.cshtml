@model EditUserRolesModel
@{
    ViewData["Title"] = "Edit User";
}
<h4 class="display-4">Edit User</h4>

<br />

<div asp-validation-summary="All" class="text-danger"></div>

<div class="card border-secondary mb-3">
    <div class="card-body text-secondary">
        <form asp-action="EditUser" method="post">
            <input type="hidden" asp-for="@Model.User.UserId" />
            <div class="form-group">
                <label asp-for="@Model.User.Username" class="control-label"></label>
                <input asp-for="@Model.User.Username" value="@Model.User.Username" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.FirstName" class="control-label"></label>
                <input asp-for="@Model.User.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.SecondName" class="control-label"></label>
                <input asp-for="@Model.User.SecondName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.Mail" class="control-label"></label>
                <input asp-for="@Model.User.Mail" value="@Model.User.Mail" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.User.RoleId" class="control-label"></label>
                <select asp-for="@Model.User.RoleId" class="form-control" asp-items="@Model.Roles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Users" class="btn btn-secondary">Cancel</a>

            </div>
        </form>
    </div>

</div>