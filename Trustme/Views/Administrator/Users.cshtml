@model IEnumerable<RoleUserModel>

<h1>Users</h1>

@{


    foreach (var user in Model)
    {
        <div class="card">

            <div class="card-body">
                <partial name="_UserList" model="user" view-data="ViewData" />
            </div>

        </div>
        <br />

    }

    <script>
    function ConfirmDelete(UserId, Username) {
        $("#hiddenId").val(UserId);
        $("#hiddenUsername").val(Username);
        $("#DeleteUserModal").modal("show");
    }
    var DeleteUser = function () {
        var IdUser = $("#hiddenId").val();
        $.ajax({
            type: "POST",
            url: "@Url.Action("Delete")",
            data: { UserId: IdUser },
            dataType: "text",
            success: function (result) {
                console.log("success");
                $("#DeleteUserModal").modal("hide");
                $("#row_" + Id).remove();
            }
        })
    }
    </script>

    <div id="DeleteUserModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure you want to delete this user?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" onclick="DeleteUser()">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" >No</button>
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" id="hiddenId" />
    </div>




}
