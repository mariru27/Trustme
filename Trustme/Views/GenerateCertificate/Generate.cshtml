@model Key

<h4 class="display-4">Generate certificates</h4>

<hr />

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Generate">
    <div class="form-group">
        <label asp-for="CertificateName" class="control-label">Certificate name</label>
        <input asp-for="CertificateName" class="form-control" name="certificateName" type="text">
    </div>
    <label for="keySize">Choose key size:</label>
    <select class="form-control" name="keySize" id="keySize">
        <option value=512>512</option>
        <option value=1024>1024</option>
        <option value=2048>2048</option>
        <option value=4096>4096</option>
    </select>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Generate" class="btn btn-primary" />
    </div>
</form>
<br />